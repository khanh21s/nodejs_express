<h2 class="mb-4">Show By Id</h2>

{{#if error}}
  <div class="alert alert-danger">
    {{error}}
  </div>
{{/if}}

<form
  method="POST"
  action="/detail/{{couse._id}}/edit?_method=PUT"
  class="w-50"
>

  <div class="mb-3">
    <label class="form-label">Name</label>
    <input
      type="text"
      name="name"
      class="form-control"
      value="{{couse.name}}"
    >
  </div>

  <div class="mb-3">
    <label class="form-label">Age</label>
    <input
      type="number"
      name="age"
      class="form-control"
      value="{{couse.age}}"
    >
  </div>

  <div class="mb-3">
    <label class="form-label">Slug</label>
    <input
      type="text"
      name="slug"
      class="form-control"
      value="{{couse.slug}}"
    >
  </div>

  <button type="submit" class="btn btn-primary">
    Update
  </button>

  <a href="/courses" class="btn btn-secondary ms-2">
    Back
  </a>
</form>
